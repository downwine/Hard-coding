<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Описание параметров числа-->
    <TextView
        android:id="@+id/mycnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384" />

    <!--Описание линии, в которую входят нижеобъявленные элементы-->
    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="178dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mycnt"
        app:layout_editor_absoluteX="73dp"
        app:layout_editor_absoluteY="176dp">

        <!--Описание параметров левой кнопки с картинкой-->
        <ImageButton
            android:id="@+id/img_Button_left"
            android:layout_width="78dp"
            android:layout_height="47dp"
            android:layout_weight="1"

            android:background="#3BFFFFFF"
            android:orientation="horizontal"
            app:srcCompat="@drawable/btn_1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="491dp" />

        <!--Описание параметров кнопки Сбросить-->
        <Button
            android:id="@+id/resetbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="0dp"
            android:text="Reset"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="407dp" />

        <!--Описание параметров правой кнопки с картинкой-->
        <ImageButton
            android:id="@+id/img_Button_right"
            android:layout_width="71dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/btn_2"
            tools:layout_editor_absoluteX="345dp"
            tools:layout_editor_absoluteY="491dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>